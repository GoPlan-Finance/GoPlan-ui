{
  "compilerOptions": {
    "module": "CommonJS",
//    "esModuleInterop": true,
//    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "/@common/*": [
        "./../../common/*"
      ],
      "/*": [
        "./"
      ]
    },
  },
  "include": [
    "src/**/*",
    "../common/**/*"
  ]
}
