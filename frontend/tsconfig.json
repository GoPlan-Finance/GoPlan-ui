{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "/@common/*": [
        "./../../common/*"
      ],
      "/@components/*": [
        "./components/*"
      ],
      "/@views/*": [
        "./views/*"
      ],
      "/@styleguide/*": [
        "./styleguide/*"
      ]
    },
    "types": [
      "@intlify/vite-plugin-vue-i18n/client"
    ]
  },
  "include": [
    "src/**/*",
    "../common/**/*"
  ]
}
